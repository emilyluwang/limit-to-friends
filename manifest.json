{
  // Required
  "manifest_version": 2,
  "name": "No New Friends",
  "version": "0.0.1",

  // Recommended
  "default_locale": "en",
  "description": "Limit your content sharing to current friends only.",

  "permissions": [
    "activeTab",
    "webRequest",
    "webRequestBlocking",
    "cookies",
    "https://*/*"
  ],

  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "content_scripts": [
    {
      "matches":[
        "https://www.facebook.com/*"
      ],
      "js":["js/jquery.js", "js/mapbox.js", "js/typeahead.js", "src/fb/content.js"],
      "css":["css/mapbox.css"]
    }
  ]
}