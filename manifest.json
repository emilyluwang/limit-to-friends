{
  // Required
  "manifest_version": 2,
  "name": "No New Friends",
  "version": "0.0.1",

  // Recommended
  "default_locale": "en",
  "description": "Limit your content sharing to current friends only.",

  "permissions": [
    "activeTab",
    "webRequest",
    "webRequestBlocking",
    "cookies",
    "https://*/*"
  ],
}
