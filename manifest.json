{
  // Required
  "manifest_version": 2,
  "name": "No New Friends",
  "version": "0.0.1",
  "description": "Limit your content sharing to current friends only.",

  "content_scripts": [
    {
      "matches": [
      "<all_urls>"
      ],
      "js": ["jquery-2.1.4.min.js","content.js"]
    }
  ],

  "permissions": [
    "activeTab",
    "webRequest",
    "webRequestBlocking",
    "cookies",
    "https://*/*"
  ]
}
